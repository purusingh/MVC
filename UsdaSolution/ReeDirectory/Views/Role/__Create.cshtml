@model ReeDirectoryEntityFm.Entities.Security.ERole

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ERole</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <table class="table">
            <tr>
                <th>
                   Controllers
                </th>
                <th>Add</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Print</th>
            </tr>

        @foreach (ReeDirectoryEntityFm.Entities.Security.EController controller in ViewBag.Controllers)
        {
            <tr>
                <td>
                    <label>@controller.Name</label>
                </td>
                <td>
                    <input type="checkbox" name="Add" value='@controller.Id' />
                </td>
                <td>
                    <input type="checkbox" name="Edit" value='@controller.Id' />
                </td>
                <td>
                    <input type="checkbox" name="Delete" value='@controller.Id' />
                </td>
                <td>
                    <input type="checkbox" name="Print" value='@controller.Id' />
                </td>
            </tr>
        }

        </table>


       
    </div>
}
