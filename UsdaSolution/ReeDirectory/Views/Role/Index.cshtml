@model ReeDirectory.Models.Role

@{
    ViewBag.Title = "Role List";
    Layout = "~/Views/Shared/__Index.cshtml";
}

@Html.DropDownListFor(x => x.FilterBy, Model.FilterColumns)
@Html.TextBoxFor(x => x.FilterByValue)
<input type="submit" />
@Html.HiddenFor(x => x.SortByName)
@Html.HiddenFor(x => x.SortByOperation)
@Html.Partial("Role/__Index", Model.Entities)
@Html.DropDownListFor(x => x.CurrentPage, Model.Pages, new { @onchange = "this.form.submit();" })
