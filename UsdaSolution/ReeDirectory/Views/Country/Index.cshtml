@model ReeDirectory.Models.Country

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript">
        function SetSort(fld) {
            var fldName = document.getElementById("SortByName");
            var fldOper = document.getElementById("SortByOperation");
            if (fldName.value == fld.innerText) {
                if (fldOper.value == "Asc")
                    fldOper.value = "Desc";
                else
                    fldOper.value = "Asc";
            }
            else {
                fldOper.value = "Asc";
            }
            fldName.value = fld.innerText;
            document.forms[0].submit();
        }
    </script>
}

<h2>View</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Country</h4>
    <hr />
    <dl class="dl-horizontal"></dl>

    @using (Html.BeginForm("Sort", "Country"))
    {
        @Html.DropDownListFor(x => x.FilterBy, Model.FilterColumns, new {  @onchange="this.form.submit();"})
        @Html.TextBoxFor(x => x.FilterByValue)
        @Html.AntiForgeryToken()
        <input type="submit" />
        @Html.HiddenFor(x => x.SortByName)
        @Html.HiddenFor(x => x.SortByOperation)
        @Html.Partial("Country/__Index", Model.Entities)
        @Html.DropDownListFor(x => x.CurrentPage, Model.Pages, new { @onchange = "this.form.submit();" })
    }
</div>
