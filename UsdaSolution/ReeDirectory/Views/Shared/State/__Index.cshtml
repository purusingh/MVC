@model IEnumerable<ReeDirectoryEntityFm.Entities.General.EState>

@{
    ReeDirectoryEntityFm.ExternalEntity.ESecurity sec = ViewBag.Security as ReeDirectoryEntityFm.ExternalEntity.ESecurity;
}

<table class="table">
    <tr>
        <th>
            <a href="#" onclick="return SetSort(this)">
                @Html.DisplayNameFor(model => model.Abbrivation)
            </a>
        </th>
        <th>
            <a href="#" onclick="return SetSort(this)">
                @Html.DisplayNameFor(model => model.Name)
            </a>
        </th>
        <th>
            <a href="#" onclick="return SetSort(this)" filterkey="Country.Name">
                Country.Name
            </a>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Abbrivation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.Partial("__ActionControl", item)
            </td>
        </tr>
    }

</table>
