@model IEnumerable<ReeDirectory.EntityFM.Entities.EState>

@{
    ReeDirectory.EntityFM.ExternalEntity.ESecurity sec = ViewBag.Security as ReeDirectory.EntityFM.ExternalEntity.ESecurity;
 
}
<p>
    @if (sec.Add > 0)
    {
       @Html.ActionLink("Create New", "Create")
    }    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Abbrivation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Abbrivation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.Name)
        </td>
        <td>
            @if (sec.Edit > 0)
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
            }
            @if (sec.Print > 0)
            {
                @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            }
            @if (sec.Delete > 0)
            {
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
